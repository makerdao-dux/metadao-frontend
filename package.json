{
  "name": "metadao-frontend",
  "version": "0.1.2",
  "private": true,
  "scripts": {
    "dev": "next dev renderer",
    "build": "next build renderer",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "electron-builder install-app-deps",
    "prettier": "prettier --config .prettierrc --write pages/ modules/",
    "electron:build": "yarn build && next export renderer",
    "electron:package": "yarn electron:build && electron-builder build",
    "electron:app": "electron electron-app/main.js"
  },
  "main": "electron-app/main.js",
  "dependencies": {
    "@dethcrypto/eth-sdk": "^0.3.3",
    "@rainbow-me/rainbowkit": "^0.8.0",
    "@types/node": "18.11.9",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "electron-is-dev": "^2.0.0",
    "electron-next": "^3.1.5",
    "electron-serve": "^1.1.0",
    "electron-updater": "^5.3.0",
    "eslint": "8.27.0",
    "eslint-config-next": "13.0.3",
    "ethers": "^5.7.2",
    "next": "13.0.3",
    "prettier": "^2.7.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "styled-jsx": "^5.1.0",
    "swr": "^1.3.0",
    "typescript": "4.9.3",
    "wagmi": "^0.8.5"
  },
  "devDependencies": {
    "electron": "^21.3.0",
    "electron-builder": "^23.6.0",
    "ts-node": "^10.9.1"
  },
  "build": {
    "productName": "Maker MetaDAO frontend",
    "appId": "com.makerdao.metadao",
    "files": [
      "renderer/public/**/*",
      "renderer/out",
      "electron-app/**/*"
    ],
    "linux": {
      "category": "Finance"
    },
    "mac": {
      "icon": false,
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "artifactName": "MetaDAO-Frontend-${version}-mac.${ext}"
    },
    "win": {
      "icon": "renderer/public/images/logo.png",
      "target": [
        "nsis"
      ],
      "artifactName": "Maker-MetaDAO-frontend-${version}-win.${ext}"
    }
  }
}

{
  "name": "subdao-frontend-monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Maker's subdaos frontends",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prettier": "prettier --write --cache .",
    "lint": "eslint --cache .",
    "build": "pnpm -r  run build",
    "dev": "pnpm -r --parallel --filter='./packages/*' run dev",
    "webapp": "pnpm --filter='./apps/webapp' dev",
    "webapp:e2e": "pnpm --filter='./apps/webapp' test:e2e:local",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "pnpm prettier",
      "pnpm lint"
    ]
  },
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "eslint": "^8.31.0",
    "husky": "^8.0.3",
    "pnpm": "^7.22.0",
    "prettier": "2.8.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/makerdao-dux/metadao-frontend.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/makerdao-dux/metadao-frontend/issues"
  },
  "homepage": "https://github.com/makerdao-dux/metadao-frontend#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lint-staged": "^13.1.0"
  }
}
